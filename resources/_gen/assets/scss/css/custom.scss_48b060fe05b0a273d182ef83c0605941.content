.site-title a{font-size:1em}.custom-container{display:flex;flex-direction:row;flex-wrap:nowrap;justify-content:space-between}.custom-container>.post-preview{max-width:30%}.custom-container>.post-preview>img{max-width:100%;max-height:100%}#languages-result{display:grid;grid-template-columns:repeat(4,1fr);grid-gap:10px;height:25px}#languages-result div{border-left:2px solid #359377;padding-left:10px}.lds-container{width:100%;text-align:center}.lds-ring{display:inline-block;position:relative;margin:0 auto;width:80px;height:80px}.lds-ring div{box-sizing:border-box;display:block;position:absolute;width:64px;height:64px;margin:8px;border:8px solid #359377;border-radius:50%;animation:lds-ring 1.2s cubic-bezier(0.5,0,0.5,1)infinite;border-color:#359377 transparent transparent transparent}.lds-ring div:nth-child(1){animation-delay:-.45s}.lds-ring div:nth-child(2){animation-delay:-.3s}.lds-ring div:nth-child(3){animation-delay:-.15s}@keyframes lds-ring{0%{transform:rotate(0deg)}100%{transform:rotate(360deg)}}