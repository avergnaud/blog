*{margin:0;padding:0}body{font-size:1rem}h2{font-size:6vmin;line-height:6vmin;margin:1.25em 0}.custom-container{display:flex;flex-direction:row;flex-wrap:nowrap;justify-content:space-between;align-items:center}.custom-container>.post-text-preview{flex-basis:45%}.custom-container>.post-preview{flex-basis:45%}.custom-container>.post-preview>img{max-width:100%;max-height:100%}.post-footer{font-size:.95rem;color:#ababab;border:none;padding-top:1.8em}article{width:100%;border:1px solid #eee;box-shadow:0 2px 3px #ccc;background-color:#fff;padding:10px;margin:10px auto;box-sizing:border-box}#languages-result th{background-color:#1b204a;color:#fff;font-weight:700}#languages-result td{padding:0}#languages-result td a{display:block;padding:10px}#languages-result tr:nth-child(even){background-color:#f2f2f2}hr.hosted{margin-bottom:50px}#languages-result div span.rnb{color:#1b204a;font-weight:700}#ohlc-macd-chart-price{display:block;height:5vw;line-height:5vw;text-align:center;font-size:5vw}.ohlc-macd-chart-sep{margin-bottom:15px}.lds-container{width:100%;text-align:center}.lds-ring{display:inline-block;position:relative;margin:0 auto;width:80px;height:80px}.lds-ring div{box-sizing:border-box;display:block;position:absolute;width:64px;height:64px;margin:8px;border:8px solid #1b204a;border-radius:50%;animation:lds-ring 1.2s cubic-bezier(0.5,0,0.5,1)infinite;border-color:#1b204a transparent transparent transparent}.lds-ring div:nth-child(1){animation-delay:-.45s}.lds-ring div:nth-child(2){animation-delay:-.3s}.lds-ring div:nth-child(3){animation-delay:-.15s}@keyframes lds-ring{0%{transform:rotate(0deg)}100%{transform:rotate(360deg)}}@media(min-width:768px){h2{font-size:4vmin;line-height:4vmin;margin:1.25em 0}#ohlc-macd-chart-price{height:1.9em;line-height:1.9em;font-size:1.9em}}@media(min-width:992px){h2{font-size:5vmin;line-height:5vmin;margin:1.25em 0}}